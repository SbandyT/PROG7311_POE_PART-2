@model IEnumerable<PROG7311_POE_PART_2.Models.Product>
@{
    var farmer = ViewBag.Farmer as PROG7311_POE_PART_2.Models.Farmer;
}
<h2>Products from @farmer.FullName</h2>

<form method="get" class="row g-3 mb-3">
    <div class="col-auto">
        <input name="startDate" type="date" class="form-control" placeholder="Start Date" />
    </div>
    <div class="col-auto">
        <input name="endDate" type="date" class="form-control" placeholder="End Date" />
    </div>
    <div class="col-auto">
        <input name="category" class="form-control" placeholder="Category" />
    </div>
    <div class="col-auto">
        <button class="btn btn-secondary">Filter</button>
    </div>
</form>

<table class="table table-bordered">
    <thead><tr><th>Name</th><th>Category</th><th>Production Date</th></tr></thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.Category</td>
                <td>@p.ProductionDate.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>
