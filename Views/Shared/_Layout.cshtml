<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Agri-Energy Connect</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-success px-3">
        <a class="navbar-brand" href="/">🌿 AgriConnect</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav ms-auto">
                @if (Context.Session.GetString("Role") == "Employee")
                {
                    <li class="nav-item"><a class="nav-link" href="/Farmer/Dashboard">Farmers</a></li>
                }
                else if (Context.Session.GetString("Role") == "Farmer")
                {
                    <li class="nav-item"><a class="nav-link" href="/Product/Dashboard">My Products</a></li>
                }
                <li class="nav-item"><a class="nav-link" href="/Auth/Logout">Logout</a></li>
            </ul>
        </div>
    </nav>
    <div class="container mt-4">
        @RenderBody()
    </div>
</body>
</html>
